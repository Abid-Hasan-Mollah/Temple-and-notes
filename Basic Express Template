// =========================
// Required Packages
// =========================
const express = require("express");
const mongoose = require("mongoose");
const dotenv = require("dotenv");
const cors = require("cors");
const bcrypt = require("bcryptjs");
const jwt = require("jsonwebtoken");
const cookieParser = require("cookie-parser");
const morgan = require("morgan");
// =========================
// Configurations
// =========================
dotenv.config();
const app = express();

// =========================
// Middlewares
// =========================
app.use(express.json());              // JSON body à¦ªà¦¾à¦°à§à¦¸ à¦•à¦°à¦¾à¦° à¦œà¦¨à§à¦¯
app.use(cors());                      // à¦…à¦¨à§à¦¯ domain à¦¥à§‡à¦•à§‡ request allow
app.use(cookieParser());              // Cookie handle à¦•à¦°à¦¾à¦° à¦œà¦¨à§à¦¯
app.use(morgan("dev"));               // Request log à¦¦à§‡à¦–à¦¾à¦° à¦œà¦¨à§à¦¯

// =========================
// Database Connection
// =========================


const MONGO_URI ="mongodb://localhost:27017/bbc"
mongoose.connect(MONGO_URI, {
    useNewUrlParser: true,
    useUnifiedTopology: true
}).then(() => {
    console.log("âœ… MongoDB Connected");
}).catch((err) => {
    console.error("âŒ MongoDB Connection Failed:", err.message);
});

// =========================
// Sample Route
// =========================
app.get("/", (req, res) => {
    res.send("API is running...");
});

// =========================
// Server Start
// =========================
const PORT = process.env.PORT || 5000;
app.listen(PORT, () => {
    console.log(`ðŸš€ Server running on port ${PORT}`);
});
